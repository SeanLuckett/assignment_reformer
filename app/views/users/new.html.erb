<h1>Make a new user in 3 magical ways!</h1>
<section class="naked">
  <h2>Rugged, original HTML form</h2>
  <form accept-charset="UTF-8" action="/users" method="post">
    <% if errors.any? %>
        <ul>
          <% errors.each do |msg| %>
              <li class="error"><%= msg %></li>
          <% end %>
        </ul>
    <% end %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>
      Email:
      <input type="email" name="user[email]" value="<%= email %>" placeholder="example@example.com">
    </label>
    <label>
      Username:
      <input type="text" name="user[username]" value="<%= username %>">
    </label>
    <label>
      Password:
      <input type="password" name="user[password]">
    </label>
    <input type="submit" value="Kneel before Zod!">
  </form>
</section>

<section class="form-tags">
  <h2>Business-class form-tag</h2>
  <%= form_tag '/users' do %>
      <% if @user.errors.any? %>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li class="error"><%= msg %></li>
            <% end %>
          </ul>
      <% end %>
      <%= label_tag 'user[email]', 'Email:' %>
      <%= email_field_tag 'user[email]', email, placeholder: 'example@example.com' %>

      <%= label_tag 'user[username]', 'Username:' %>
      <%= text_field_tag 'user[username]', username %>

      <%= label_tag 'user[password]', 'Password:' %>
      <%= password_field_tag 'user[password]' %>

      <%= submit_tag 'Submit' %>
  <% end %>
</section>

<section class="form-for">
  <h2>Blinged-out form_for</h2>
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li class="error"><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      <%= f.label :email, 'Email:' %>
      <%= f.email_field :email, placeholder: 'example@example.com' %>

      <%= f.label :username, 'Username:' %>
      <%= f.text_field :username %>

      <%= f.label :password, "What's the password?" %>
      <%= f.password_field :password %>

      <%= f.submit 'Kneel before Zod!' %>
  <% end %>
</section>